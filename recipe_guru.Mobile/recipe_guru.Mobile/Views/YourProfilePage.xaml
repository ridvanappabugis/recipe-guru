<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="recipe_guru.Mobile.Views.YourProfilePage"
             BackgroundColor="Beige">
    <ContentPage.Content>
        <StackLayout Padding="20" >
            <Label x:Name="Username" FontSize="20" Margin="8" FontAttributes="Bold" TextDecorations="Underline"></Label>
            <Label Text="First name" FontAttributes="Bold" FontSize="15"></Label>
            <Label x:Name="FirstName" ></Label>
            <Label Text="Last name" FontAttributes="Bold" FontSize="15"></Label>
            <Label x:Name="LastName"></Label>
            <Label Text="Description" FontAttributes="Bold" FontSize="15"></Label>
            <Label x:Name="Description"></Label>
            <Label Text="Email" FontAttributes="Bold" FontSize="15"></Label>
            <Label x:Name="Email"></Label>
            <Label Text="Phone number" FontAttributes="Bold" FontSize="15"></Label>
            <Label x:Name="Phone"></Label>
            <Button Clicked="Button_Clicked" Text="Edit informations" BackgroundColor="SandyBrown"
                    TextColor="White" Margin="0,20,0,0"></Button>
            <Button Clicked="Button_Clicked_1" Text="Change password" BackgroundColor="SandyBrown"
                    TextColor="White"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
