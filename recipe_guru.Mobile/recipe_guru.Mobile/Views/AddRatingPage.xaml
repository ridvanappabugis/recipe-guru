<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="recipe_guru.Mobile.Views.AddRatingPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="10" VerticalOptions="StartAndExpand">
                <Label Text="Add Review" Margin="0,30,0,30" FontAttributes="Bold" FontSize="20"></Label>

                <Label Text="Rating"></Label>
                <Picker x:Name="picker"
                    Title="Select stars">
                </Picker>

                <Label Text="Comment"></Label>
                <Entry x:Name="Comment"></Entry>

                <Button Clicked="Button_Clicked" BackgroundColor="SandyBrown" TextColor="White" HorizontalOptions="FillAndExpand" Text="Add Review"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
